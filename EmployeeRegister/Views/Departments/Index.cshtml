@model IEnumerable<EmployeeRegister.Models.DepartmentsListViewModel> 

@{
    ViewBag.Title = "Index";
}

<h2>Departments</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfEmployees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalarySum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEmployees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarySum)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { name = item.DepartmentName })
            </td>
        </tr>
    }

    </table>
